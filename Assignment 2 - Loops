package n01393134_Assignment2;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		double numTotal = 0;
		double tax = 0.075;
		double taxTotal = 0;
		
		for (int i = 0; i < 3; i++) {
			
		  Scanner input = new Scanner(System.in);
          System.out.printf("Please enter the price:");
          double num1 = input.nextDouble();
          numTotal = numTotal + num1;
         
          taxTotal = numTotal + (numTotal * tax);
           

           
          
         
          
 
          
	}
		
		 System.out.printf("Your total is: %fl\n", numTotal);
		 System.out.printf("Your total with tax is: %fl", taxTotal);

	}
}
